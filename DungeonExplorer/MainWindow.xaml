<Window x:Class="DungeonExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:DungeonExplorer.Converters"
        Title="Dungeon Explorer"
        Height="900"
        Width="1100"
        Background="#1A1A1A">
    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0D7C6"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#C49B3A"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4A3A2A"/>
            <!-- Bronze -->
            <Setter Property="Foreground" Value="#F2E8C9"/>
            <!-- Light parchment -->
            <Setter Property="BorderBrush" Value="#A84C32"/>
            <!-- Bloodstone red -->
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <!-- Arrow keys -->
        <KeyBinding Key="Up"
                Command="{Binding MoveNorthCommand}"/>
        <KeyBinding Key="Down"
                Command="{Binding MoveSouthCommand}"/>
        <KeyBinding Key="Left"
                Command="{Binding MoveWestCommand}"/>
        <KeyBinding Key="Right"
                Command="{Binding MoveEastCommand}"/>

        <!-- WASD -->
        <KeyBinding Key="W"
                Command="{Binding MoveNorthCommand}"/>
        <KeyBinding Key="S"
                Command="{Binding MoveSouthCommand}"/>
        <KeyBinding Key="A"
                Command="{Binding MoveWestCommand}"/>
        <KeyBinding Key="D"
                Command="{Binding MoveEastCommand}"/>
    </Window.InputBindings>

    <Grid Margin="16">
        <!-- Main layout rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top info: player, room, item -->
            <RowDefinition Height="Auto"/>
            <!-- Stats: moves/par/score -->
            <RowDefinition Height="*"/>
            <!-- Inventory -->
            <RowDefinition Height="Auto"/>
            <!-- Status text -->
            <RowDefinition Height="Auto"/>
            <!-- Movement + pickup controls -->
        </Grid.RowDefinitions>

        <!-- Top info block: Player, Current Room, Item -->
        <StackPanel Grid.Row="0"
                    Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                <TextBlock Text="Player: "
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding PlayerName}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                <TextBlock Text="Current Room: "
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding Player.CurrentRoom}"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Item in this room: "
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentRoomItem}"/>
            </StackPanel>
        </StackPanel>

        <!-- Stats: Moves / Par / Score -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Moves: "
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding MoveCount}"
                       Margin="0,0,16,0"/>

            <TextBlock Text="Par: "
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding Par}"
                       Margin="0,0,16,0"/>

            <TextBlock Text="Score: "
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding Score}"/>
        </StackPanel>

        <!-- Inventory -->
        <GroupBox Grid.Row="2"
                  Header="Inventory"
                  Margin="0,0,0,8"
                  Background="#2B2B2B"
                  BorderBrush="#4A3A2A"
                  Foreground="#C49B3A">
            <ItemsControl ItemsSource="{Binding Player.Inventory}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>

        <!-- Status -->
        <StackPanel Grid.Row="3"
                    Margin="0,0,0,8">
            <TextBlock Text="Status:"
                       FontWeight="Bold"
                       Margin="0,0,0,2"/>
            <TextBlock Text="{Binding StatusMessage}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Movement + Pickup controls -->
        <StackPanel Grid.Row="4"
                    Margin="0,8,0,0">
            <Grid Margin="0,0,0,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Movement buttons in a compass layout -->
                <Button Grid.Row="0" Grid.Column="1"
                        Content="North"
                        Command="{Binding MoveNorthCommand}"
                        IsEnabled="{Binding IsPlaying}"
                        Width="80"
                        Margin="4"/>

                <Button Grid.Row="1" Grid.Column="0"
                        Content="West"
                        Command="{Binding MoveWestCommand}"
                        IsEnabled="{Binding IsPlaying}"
                        Width="80"
                        Margin="4"/>

                <Button Grid.Row="1" Grid.Column="1"
                        Content="South"
                        Command="{Binding MoveSouthCommand}"
                        IsEnabled="{Binding IsPlaying}"
                        Width="80"
                        Margin="4"/>

                <Button Grid.Row="1" Grid.Column="2"
                        Content="East"
                        Command="{Binding MoveEastCommand}"
                        IsEnabled="{Binding IsPlaying}"
                        Width="80"
                        Margin="4"/>
            </Grid>

            <Button Content="Pick Up Item"
                    Command="{Binding PickupItemCommand}"
                    IsEnabled="{Binding IsPlaying}"
                    Width="120"
                    HorizontalAlignment="Left"
                    Margin="4,0,0,0"/>
        </StackPanel>

        <!-- Overlay: Menu + Game Over -->
        <Border Background="#CC1A1A1A"
                BorderBrush="#4A3A2A"
                BorderThickness="2"
                CornerRadius="16"
                Padding="24,20"
                Visibility="{Binding ShowMenuOverlay, Converter={StaticResource BoolToVis}}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center"
                        Width="700">

                <!-- Overlay Title -->
                <TextBlock Text="{Binding OverlayTitle}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#C49B3A"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <!-- Overlay Subtitle -->
                <TextBlock Text="{Binding OverlaySubtitle}"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <!-- How to Play -->
                <TextBlock FontSize="12"
                           Foreground="White"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,12">
                    <Run Text="Objective:" FontWeight="Bold"/>
                    <Run Text=" Explore the castle, collect all six legendary items, and then enter the Dungeon to face the final boss."/>
                    <LineBreak/><LineBreak/>
                    <Run Text="Controls:" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run Text="• Use the arrow keys or W/A/S/D to move between rooms."/>
                    <LineBreak/>
                    <Run Text="• You can also click the movement buttons on the main screen."/>
                    <LineBreak/>
                    <Run Text="• When an item is present, click "/>
                    <Run Text="Pick Up Item" FontStyle="Italic"/>
                    <Run Text=" to add it to your inventory."/>
                    <LineBreak/><LineBreak/>
                    <Run Text="Scoring:" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run Text="• +100 points for each item you collect."/>
                    <LineBreak/>
                    <Run Text="• An optimal par route is calculated using BFS + dynamic programming."/>
                    <LineBreak/>
                    <Run Text="• At the end of the game, you lose points for every move over par."/>
                </TextBlock>


                <!-- Player Name input -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,12"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Player Name:"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBox Text="{Binding PlayerName, UpdateSourceTrigger=PropertyChanged}"
                             Width="160"/>
                </StackPanel>

                <!-- Leaderboard filters -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Center">
                    <CheckBox Content="Show only my scores"
                              IsChecked="{Binding ShowOnlyMyScores}"
                              Foreground="White"
                              Margin="0,0,8,0"/>
                    <CheckBox Content="Wins only"
                              IsChecked="{Binding ShowWinsOnly}"
                              Foreground="White"/>
                </StackPanel>

                <!-- Leaderboard -->
                <GroupBox Header="Top Scores"
                          Width="300"
                          Margin="0,0,0,16"
                          Background="#2B2B2B"
                          BorderBrush="#4A3A2A"
                          Foreground="#C49B3A">
                    <StackPanel>
                        <!-- Header Row -->
                        <StackPanel Orientation="Horizontal" Margin="4,0,4,4">
                            <TextBlock Text="Player" Width="120" Foreground="#C49B3A" FontWeight="Bold"/>
                            <TextBlock Text="Score"  Width="60"  Foreground="#C49B3A" FontWeight="Bold"/>
                            <TextBlock Text="Moves"  Width="50"  Foreground="#C49B3A" FontWeight="Bold"/>
                            <TextBlock Text="Par"    Width="50"  Foreground="#C49B3A" FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Score Rows -->
                        <ItemsControl ItemsSource="{Binding TopScores}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="4,2">
                                        <TextBlock Text="{Binding PlayerName}" Width="120" Foreground="#E0D7C6"/>
                                        <TextBlock Text="{Binding Points}"     Width="60"  Foreground="#E0D7C6" TextAlignment="Right"/>
                                        <TextBlock Text="{Binding Moves}"      Width="50"  Foreground="#E0D7C6" TextAlignment="Right"/>
                                        <TextBlock Text="{Binding Par}"        Width="50"  Foreground="#E0D7C6" TextAlignment="Right"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </GroupBox>

                <!-- Buttons -->
                <Button Content="New Game"
                        Command="{Binding NewGameCommand}"
                        Width="140"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,8"
                        Padding="6,3"
                        FontWeight="Bold"/>

                <Button Content="Main Menu"
                        Command="{Binding GoToMenuCommand}"
                        Width="140"
                        HorizontalAlignment="Center"
                        Padding="4,2"
                        Visibility="{Binding IsInGameOver, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
